

<h2 align="center">Title: <%= @post.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
          <div class="row center">
            <div class="col-md-4 col-md-offset-4">
              <li>Created by:</li>
              <li><%= link_to gravatar_for(@post.user), user_path(@post.user) %></li>
              <li class="post-title">
                <%= link_to @post.user.username, user_path(@article.user) %>
              </li>
              <li><small>
                <%= pluralize(@post.user.posts.count, "post") if @post.user.posts %>
              </small></li>
            </div>
          </div>
        </ul>
    <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
   <%= simple_format(@post.description) %>
   <% if @post.categories.any? %>
     <p>Categories: <%= render @post.categories %></p>
   <% end %>
  <div class= "post-actions"> 
 
    <%= link_to "View all articles", posts_path, class: "btn btn-xs btn-success" %>
  </div>
</div>